{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node", // Or "node16" for modern Node.js module resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@pilab/pi-ui": ["./src"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}